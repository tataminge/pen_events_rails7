 <% if post_event.favorited_by?(current_member) %>
  <%= link_to public_post_event_favorites_path(post_event.id), data: { turbo_method: :delete }, remote: true do %>
   <i class="fa-solid fa-heart fa-lg" style="color: #f4a4c0;"></i>
    <%= post_event.favorites.count %>
  <% end %>
<% else %>
  <%= link_to public_post_event_favorites_path(post_event.id), data: { turbo_method: :post }, remote: true do %>
    <i class="fa-regular fa-heart fa-lg"></i>
    <%= post_event.favorites.count %>
  <% end %>
<% end %>