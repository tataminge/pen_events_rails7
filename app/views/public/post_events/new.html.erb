<h1>イベント登録</h1>

<%= form_with(model: @post_event, local: true) do |form| %>
  <div class="field">


  </div>

  <div class="field">
    <%= form.label :start_date %>
    <%= form.date_field :start_date %>
  </div>

  <div class="field">
    <%= form.label :end_date %>
    <%= form.date_field :end_date %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_field :body %>
  </div>

  <div class="field">
    <%= form.label :url %>
    <%= form.text_field :url %>
  </div>

  <div class="field">
    <%= form_with(model: @post_event, url: events_path, method: :post) do |form| %>
      <%= form.collection_select(:member_id, Zb.all, :id, :zb_name, {}, { multiple: true }) %>
      <%= form.submit 'Create Event' %>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
